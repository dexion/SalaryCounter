<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShowFinanceCondition.FinanceConditionNameFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/fab_margin">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/finance_condition_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/finance_condition_start_date_hint"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/finance_condition_start_date"
            android:singleLine="true"
            android:inputType="none" />

    </LinearLayout>

</FrameLayout>
